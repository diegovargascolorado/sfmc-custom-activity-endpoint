{
  "workflowApiVersion": "1.1",
  "metaData": {
    "icon": "https://unpkg.com/ionicons@5.5.2/dist/svg/send-outline.svg",
    "category": "message"
  },
  "type": "REST",
  "lang": {
    "en-US": {
      "name": "Enviar a Webhook",
      "description": "Envía datos del contacto a un servicio externo (webhook)"
    }
  },
  "arguments": {
    "execute": {
      "inArguments": [
        {
          "contactKey": "{{Contact.Key}}"
        },
        {
          "emailAddress": "{{InteractionDefaults.Email}}"
        },
        {
          "firstName": "{{InteractionDefaults.FirstName}}"
        },
        {
          "journeyName": "{{Journey.Name}}"
        }
      ],
      "outArguments": [],
      "url": "REEMPLAZAR_CON_URL_DE_TU_APP",
      "verb": "POST",
      "body": "",
      "header": "",
      "format": "json",
      "useJwt": true,
      "timeout": 10000
    }
  },
  "configurationArguments": {
    "applicationExtensionKey": "https://sfmc-custom-activity-endpoint.onrender.com",
    "save": {
      "url": "https://sfmc-custom-activity-endpoint.onrender.com/save",
      "verb": "POST"
    },
    "publish": {
      "url": "https://sfmc-custom-activity-endpoint.onrender.com/publish",
      "verb": "POST"
    },
    "validate": {
      "url": "https://sfmc-custom-activity-endpoint.onrender.com/validate",
      "verb": "POST"
    }
  },
  "wizardSteps": [
    {
      "label": "Configuración",
      "key": "step1"
    }
  ],
  "userInterfaces": {
    "configModal": {
      "height": 400,
      "width": 600,
      "fullscreen": false,
      "url": "https://sfmc-custom-activity-endpoint.onrender.com/index.html"
    }
  }
}
